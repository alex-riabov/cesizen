{% extends 'base.html.twig' %}

{% block title %}Modifier une Entrée{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h1 class="card-title mb-4">📝 Modifier une entrée d’émotion</h1>

                {{ form_start(form) }}

                <div class="mb-3">
                    {{ form_label(form.dateHeureEntree) }}
                    {{ form_widget(form.dateHeureEntree, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.emotion) }}
                    {{ form_widget(form.emotion, {'attr': {'class': 'form-select'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.commentaire) }}
                    {{ form_widget(form.commentaire, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button class="btn btn-primary">💾 Enregistrer</button>
                    <a href="{{ path('app_emotion_tracker_journal') }}" class="btn btn-secondary">↩ Retour au journal</a>
                </div>

                {{ form_end(form) }}

                <form method="post" action="{{ path('app_entree_delete', {'id': entree.id}) }}" class="mt-3"
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette entrée ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entree.id) }}">
                    <button class="btn btn-outline-danger">🗑 Supprimer</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
