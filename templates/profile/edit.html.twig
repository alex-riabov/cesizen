{% extends 'base.html.twig' %}

{% block title %}Mon profil | CesiZen{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">🧑‍💻 Mon Profil</h1>

        <div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.utilisateurInfo.prenomUtilisateur) }}
                {{ form_widget(form.utilisateurInfo.prenomUtilisateur, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.utilisateurInfo.nomUtilisateur) }}
                {{ form_widget(form.utilisateurInfo.nomUtilisateur, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.utilisateurInfo.dateNaissanceUtilisateur) }}
                {{ form_widget(form.utilisateurInfo.dateNaissanceUtilisateur, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.plainPassword) }}
                {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                <small class="form-text text-muted">Laissez vide si vous ne souhaitez pas changer votre mot de passe.</small>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <button class="btn btn-primary" type="submit">💾 Enregistrer</button>
                {{ form_end(form, {'render_rest': false}) }}
            </div>

            {% if not is_granted('ROLE_ADMIN') %}
                <hr class="my-4">
                <form method="post" action="{{ path('app_profile_delete') }}"
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_account_' ~ app.user.id) }}">
                    <button class="btn btn-outline-danger w-100" type="submit">🗑 Supprimer mon compte</button>
                </form>
            {% endif %}
        </div>
    </div>
{% endblock %}
