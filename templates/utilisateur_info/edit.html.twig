{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Modifier un utilisateur</h1>

        {{ form_start(form) }}

        <fieldset class="mb-4">
            <legend>Informations personnelles</legend>
            {{ form_row(form.nomUtilisateur) }}
            {{ form_row(form.prenomUtilisateur) }}
            {{ form_row(form.dateNaissanceUtilisateur) }}
        </fieldset>

        <fieldset class="mb-4">
            <legend>Informations de connexion</legend>
            {{ form_row(form['email']) }}
            {{ form_row(form['roles']) }}
            {{ form_row(form['newPassword']) }}
        </fieldset>

        <button class="btn btn-success">Mettre à jour</button>
        {{ form_end(form) }}

        <a href="{{ path('app_utilisateur_info_index') }}" class="btn btn-link mt-3">← Retour à la liste</a>

        <form method="post" action="{{ path('app_utilisateur_info_delete', {'id': utilisateur_info.id}) }}" class="mt-3" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur_info.id) }}">
            <button class="btn btn-danger">Supprimer</button>
        </form>
    </div>
{% endblock %}
