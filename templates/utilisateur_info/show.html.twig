{% extends 'base.html.twig' %}

{% block title %}Détail utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détail de l'utilisateur</h1>

        <table class="table table-bordered">
            <tbody>
            <tr>
                <th>ID</th>
                <td>{{ utilisateur_info.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ utilisateur_info.nomUtilisateur }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ utilisateur_info.prenomUtilisateur }}</td>
            </tr>
            <tr>
                <th>Date de naissance</th>
                <td>{{ utilisateur_info.dateNaissanceUtilisateur ? utilisateur_info.dateNaissanceUtilisateur|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ utilisateur_info.utilisateur.email }}</td>
            </tr>
            <tr>
                <th>Rôle</th>
                <td>
                    {% if 'ROLE_ADMIN' in utilisateur_info.utilisateur.roles %}
                        Administrateur
                    {% else %}
                        Utilisateur
                    {% endif %}
                </td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_utilisateur_info_index') }}" class="btn btn-link">← Retour à la liste</a>
        <a href="{{ path('app_utilisateur_info_edit', {'id': utilisateur_info.id}) }}" class="btn btn-primary">Modifier</a>

        {{ include('utilisateur_info/_delete_form.html.twig') }}
    </div>
{% endblock %}
